title: Shuffle Leadership
new-page: true
is-card: true
tags: party_affairs
view-if: shuffle_leadership_timer = 0 and difficulty >= 0
on-arrival: month_activities += 0; shuffle_leadership_timer = 8;
card-image: img/armycouncil.jpg
